<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Cadastro de Fornecedor</h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row column1">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Fornecedores</h2>
                        </div>
                    </div>
                    <section class="ftco-section ftco-no-pb ftco-no-pt">
                        <div class="row">
                            <div class="col-md-12 order-md-last">
                                <div class="login-wrap p-4 p-md-5">
                                    <h3 class="mb-4">Insira os dados para cadastro</h3>
                                    <form action="#" class="signup-form">
                                        <div class="form-group">
                                            <label class="label" for="name">Nome Fornecedor</label>
                                            <input type="text" class="form-control" placeholder="Razão Social">
                                        </div>
                                        <div class="form-group">
                                            <label class="label" for="Registro">CNPJ</label>
                                            <input type="text" class="form-control" placeholder="XX.XXX.XXX/XXXX-XX">
                                        </div>
                                        <div class="form-group">
                                            <label class="label" for="Endereço">Endereço</label>
                                            <input type="text" class="form-control" placeholder="Rua/Av...., número">
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-5">
                                                <label class="label" for="Cidade">Preço</label>
                                                <input type="number" class="form-control" placeholder="R$">
                                            </div>
                                            <div class="form-group col-md-5 offset-md-2">
                                                <label class="label" for="Estado">Tempo de Entrega</label>
                                                <input type="time" class="form-control">
                                            </div>
                                        </div><br>
                                        <p class="text-center">Todos os dados estão corretos?</p>
                                        <div class="form-group d-flex justify-content-end mt-4">
                                            <button type="submit" class="btn btn-primary submit"><span class="fa fa-paper-plane"></span></button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
</div>